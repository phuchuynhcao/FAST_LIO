<launch>
  <!-- Launch file for velodyne16 VLP-16 LiDAR -->

    <arg name="rviz" default="true" />

    <rosparam command="load" file="$(find fast_lio)/config/velodyne_LIOSAM.yaml" />

    <param name="feature_extract_enable" type="bool" value="0"/>
    <param name="point_filter_num" type="int" value="4"/>
    <param name="max_iteration" type="int" value="3" />
    <param name="filter_size_surf" type="double" value="0.5" />
    <param name="filter_size_map" type="double" value="0.5" />
    <param name="cube_side_length" type="double" value="1000" />
    <param name="runtime_pos_log_enable" type="bool" value="0" />

    <node pkg="fast_lio" type="fastlio_mapping" name="laserMapping" output="screen" /> 

    <!--- Robot State TF -->
    <include file="$(find fast_lio)/launch/include/module_robot_state_publisher.launch" />

    <!--- Run Navsat -->
    <include file="$(find fast_lio)/launch/include/module_navsat.launch" >
        <arg name="imu_topic" value="imu_correct" />
        <arg name="gnss_topic" value="gps/fix" />
    </include>

    <!-- <node pkg="tf" type="static_transform_publisher"
        name="map_transform_odom"
        args="0.0 0.0 0.0 0 0 0 map odom 10" /> -->

    <!-- <node pkg="tf" type="static_transform_publisher"
        name="body_transform_base_link"
        args="0.0 0.0 0.0 0 1.57079632679 0 body base_link 10" /> -->

    <group if="$(arg rviz)">
    <node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find fast_lio)/rviz_cfg/loam_livox_liosam.rviz" />
    </group>

</launch>